{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/*/node_modules"
  ]
}

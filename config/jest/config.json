{
  "rootDir": "../../",
  "modulePathIgnorePatterns": [
    "packages/.*/lib",
    "packages/.*/test/fixtures/.*d.ts"
  ],
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    ".ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
  "moduleFileExtensions": ["js", "ts"]
}

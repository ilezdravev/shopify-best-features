{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "exclude": [
    "test/**",
    "lib/**",
    "node_modules/**"
  ]
}
